<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
   <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/product_sans</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="ProductSansStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="itemTextColor">@android:color/white</item>
        <item name="android:fontFamily">@font/product_sans</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="itemBackground">@drawable/ripple_bg</item>
    </style>

    <color name="white">@color/color_white</color>
    <color name="bg_color">#FFFFFF</color>
    <color name="bg_color_sec">#AEAEAE</color>
    <color name="bg_color_header">#D8D8D8</color>
    <color name="txt_color">#000000</color>
    <color name="txt_color_secondary">#DD555555</color>
</resources>